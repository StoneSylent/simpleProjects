<div class="depot_form">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="field">
      <li class="secondary alert">Username</li>
      <%= f.text_field :user_name %>
    </div>

    <div class="field">
      <li class="secondary alert">Password</li>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <li class="secondary alert">Re-Enter Password</li>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
      <li class="secondary alert">Zip Code (used for weather)</li>
      <%= f.number_field :location %>
    </div>

    <div class="actions">
      <div class="primary btn pretty"><%= f.submit %></div>
      <div class="danger btn pretty"><%= link_to "Cancel", main_home_path %></div>
    </div>

  </fieldset>
<% end %>

</div>

